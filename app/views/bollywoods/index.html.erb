<h3 style="text-align:center"> Your current score is <%= @curscore.Bollywood %></h3>
<br/><br/><br/>
<div class = "container">
    <table class = "table table-striped">
        <thead>
            <tr>
                <th>User name</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            <% @bollywoods.each do |bollywood| %>
            <tr>
                <td><%= User.find(bollywood.user_id).email %></td>
                <td><%= bollywood.bmax %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <%= link_to "Start New",'/bollywoods/1',class: "btn btn-primary" %>
    <br/>
    <br/>
    <br/>
    <% if @curscore.bcur>0 %>
    <% if @curscore.bcur!=Bollywood.count() %>
    <%= link_to "Resume",'/bollywoods/'+(@curscore.bcur).to_s,class: "btn btn-primary" %>
    <% end %>
    <% end %>
    <br/>
    <br/>
</div>

